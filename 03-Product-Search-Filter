import java.util.*;

class Product {
    int id; String name, category; double price; int stock;

    Product(int id, String name, String category, double price, int stock) {
        this.id = id; this.name = name; this.category = category; this.price = price; this.stock = stock;
    }
}

public class Main {
    static ArrayList<Product> products = new ArrayList<>();

    static void search(String keyword) {
        System.out.println("\nSearch Results for: " + keyword);
        for (Product p : products)
            if (p.name.toLowerCase().contains(keyword.toLowerCase()) || p.category.toLowerCase().contains(keyword.toLowerCase()))
                System.out.printf("%d | %-20s | %-10s | â‚¹%.2f | Stock: %d%n", p.id, p.name, p.category, p.price, p.stock);
    }

    public static void main(String[] args) {
        products.add(new Product(1, "Terracotta Vase", "Pottery", 899, 15));
        products.add(new Product(2, "Macrame Hanging", "Macrame", 1299, 8));
        products.add(new Product(3, "Soy Candle", "Candles", 449, 25));

        Scanner sc = new Scanner(System.in);
        while (true) {
            System.out.print("\nSearch (or 'exit'): ");
            String q = sc.nextLine();
            if (q.equalsIgnoreCase("exit")) break;
            search(q);
        }
    }
}
